<template>
  <div class="menu">
    <h1>BANCO</h1>
      <br>
    <label>Apellido:</label>
    <input type="text" id="apellido" v-model="apellido">
    <label>Nombre:</label>
    <input type="text" id="nombre" v-model="nombre">
    <label>Monto a invertir:</label>
    <input type="text" id="monto" v-model="monto">
    <label>Cantidad de días:</label>
    <input type="text" id="cantidad" v-model="cantidad">
      <br><br>
    <label>¿Desea reinvertir el capital?</label>
      <select v-model="reinvertir">
        <option value="1">Si</option> 
        <option value="2">No</option> 
      </select>
        <br><br>
  </div>

  <button @click="calcular()">Calcular</button>
</template>

<script>
//import HelloWorld from '../components/HelloWorld.vue'

//export default {
  //name: 'Menu',
  //components:{
    //HelloWorld
  },
    data(){
    return{
      nombre: '',
      apellido: '',
      monto: '',
      cantidad: '',
      reinvertir: null,
      plazofijo: []
    }
  },

  methods:{
    calcular(){
      if(this.nombre==='' || this.apellido==='' || this.monto==='' || this.cantidad==='' || this.reinvertir===null){
        alert('!DATO FALTANTE!')
        return
      }
        this.plazofijo.push({
          nombre:this.nombre,
          apellido:this.apellido,
          monto:this.monto,
          cantidad:this.cantidad,
          reinvertir:this.reinvertir
        })

        this.nombre='',
        this.apellido='',
        this.monto='',
        this.cantidad='',
        this.reinvertir=null
      }
  }
}
</script>
